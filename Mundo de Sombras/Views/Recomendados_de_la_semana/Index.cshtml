@model IEnumerable<Mundo_de_Sombras.Models.Recomendados_de_la_semana>

@{
    ViewData["Title"] = "Index";
}

<h1>Te presentamos nuestras recomendaciones para leer</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Terror)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenatural)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ficcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Terror)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenatural)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ficcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/edit.png.png" width="20" /></a>
                <a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/details.png.png" width="20" /></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/delete.png.png" width="20" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
